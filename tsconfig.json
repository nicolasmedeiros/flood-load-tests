{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "pretty": true,
    "strictNullChecks": false,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "node_modules/**"
  ]
}
